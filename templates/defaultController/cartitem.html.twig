{% extends "base.html.twig" %}
{% block title %}
    {{ parent() }}
    Liste des produits dans votre cadis
{% endblock %}
{% block content %}
    <div class="container-fluid">
        <div class="row justify-content-center">
            <div class="col-12 col-md-10">
                <h1 class="text-center text-dark">Liste des produits dans votre cadis</h1>
                <div class="table-responsive">
                    <table class="table table-hover">
                        <thead>
                            <tr>
                                <th width="60%" scope="col" class="text-primary">nom du produit</th>
                                <th width="20%" scope="col" class="text-primary">quantité</th>
                                <th width="20%" scope="col" class="text-primary">prix unité</th>
                            </tr>
                        </thead>
                        <tbody>
                            {% for ci in cartitems %}
                                <tr class="{{ cycle(['tableprimary','table-secondary'], loop.index0) }}">
                                    <td>{{ ci.produit.name }}</td>
                                    <td>{{ ci.quantity }}</td>
                                    <td>{{ ci.unit }}</td>
                                </tr>
                            {% endfor %}
                        </tbody>
                    </table>
                </div>
                <a href="index.php?page=validation" class="btn btn-sm btn-primary" style="position: fixed; bottom: 20px; right: 20px;">valider votre panier</a>
            </div>
        </div>
    </div>
{% endblock %}
