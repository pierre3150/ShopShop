{% extends "base.html.twig" %}

{% block title %}
	{{ parent() }}
	Modifier un cart
{% endblock %}

{% block content %}
	<div class="container-fluid">
		<div class="row justify-content-center">
			<div class="col-12 col-md-6 align-items-center">
				<h1 class="text-center text-primary fw-bold m-2">Modifier un cart</h1>
				<form method="POST">
					{% if cart.status == 'finished' %}
						<p>Votre panier est terminé.</p>
					{% else %}
						<label for="status">Avez-vous terminé votre panier ?</label>
						<select name="status" class="form-select">
							<option value="finished">Oui</option>
							<option value="in_progress">Non</option>
						</select>
						<div class="text-center">
							<input type="submit" value="Modifier" class="btn btn-primary m-2">
						</div>
					{% endif %}
				</form>
			</div>
		</div>
	</div>
{% endblock %}
